<div class="user_requests_page">

    <h1>MY REQUESTS</h1>

    <div class="requests_page_container">

      <div class="user_active_request">

        <% if @user.requests.where("active = ?", true).exists? %>

          <h2> My Request </h2>

          <div class="done_btn">
            <%= form_for [@user, @request], remote: true do |f| %>
            <%= f.hidden_field :active, value: false, method: :patch %>
            <%= f.submit "Done" %>
          <% end %>
        </div>

          <%= render "active_request", object: @request %>

        <% else %>

        <div class="new_request_btn">  <%= render 'create_request' %> </div>

        <% end %>

      </div>


      <div class="old_requests">

        <h2> Old Requests </h2>

            <div class="old_requests_container">
              <div class="inactive_requests">
                <% if @inactive_requests.present? %>
                  <%= render @inactive_requests %>
                  <%= paginate @inactive_requests %>
                  <% end %>
              </div>
            </div>
      </div>
    </div>
</div>
