<div class="new_request_page">

  <h1> New Request </h1>

    <div class="new_request_form">

      <%= form_for @request, url: {action: "create"} do |form| %>

        <% if @request.errors.any? %>
          <div id="error_explanation">
            <h4><%= pluralize(@request.errors.count, "error") %> prohibited this request from being saved:</h4>

            <ul>
              <% @request.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>

          </div>
        <% end %>

        <% if @user.errors.any? %>
          <div id="error_explanation">
            <h4><%= pluralize(@user.errors.count, "error") %> prohibited this request from being saved:</h4>

            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>

          </div>
        <% end %>

        <div class="form_field">
          <%= form.label :Category %>
          <%= form.collection_select :category_id, @categories, :id, :name, include_blank: true, :prompt => "Choose a Category" %>
        </div>

          <br>

        <div class="form_field">
          <%= form.label :description %>
          <%= form.text_area :description, placeholder: "How would you describe your question?" %>
        </div>

          <br>

        <div class="form_field">
          <%= form.label :expire %>
          <%= form.date_field :expire, :value => (Date.today + 7.days).strftime("%Y-%m-%d") %>
        </div>

          <br>

        <div class="form_field">
          <%= form.label :points %>
          <%= form.number_field :points, placeholder: "How many points would you like to offer?" %>
        </div>

          <br>

        <div class="submit">
          <%= form.submit %>
        </div>

      <% end %>

    </div>
  </div>
