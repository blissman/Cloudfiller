<h1> New Request </h1>

  <div class="new_request_form">

    <%= form_for @request, url: {action: "create"} do |form| %>

      <div class="form_field">
        <%= form.label :Category %>
        <%= form.collection_select :category_id, @categories, :id, :name, include_blank: true %>
      </div>

        <br>

      <div class="form_field">
        <%= form.label :description %>
        <%= form.text_area :description %>
      </div>

        <br>

      <div class="form_field">
        <%= form.label :expire %>
        <%= form.date_field :expire %>
      </div>

        <br>

      <div class="form_field">
        <%= form.label :points %>
        <%= form.number_field :points %>
      </div>

        <br>

      <div class="submit">
        <%= form.submit %>
      </div>

    <% end %>

  </div>
