
  <h1> <%= @user.name %> Account</h1>

<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>
<p>
  <strong>Last name:</strong>
  <%= @user.lastname %>
</p>
<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', root_path %>

<div id="account_points">
  <p>
    <%= @user.points %>
  </p>
</div>

<div id="account_rating">
  <p>
    <% if @user.rating == nil %>
      <%= "Participate in the community for a rating!" %>
    <% else %>
      <%= @user.rating %>
    <% end %>
  </p>
</div>

<div id="user_experiences">
  <p>
    <% if @user.rating == nil %>
      <%= "Participate in the community for a rating!" %>
    <% else %>
      <%= @user.rating %>
    <% end %>
  </p>
</div>
