
<h1> My Account</h1>

  <p id="notice"><%= notice %></p>

      <p>
        <strong>Name:</strong>
        <%= @user.name %>
      </p>
      <p>
        <strong>Last name:</strong>
        <%= @user.lastname %>
      </p>
      <p>
        <strong>Email:</strong>
        <%= @user.email %>
      </p>

<%#= link_to 'Back', root_path %>

    <div class="user_experiences">

      <p>
        <strong>Education:</strong>
        <% if @user.experience != nil %>
          <%= @user.experience.education %>
        <% end %>
      </p>

        <br>

      <p>
        <strong>Job Experience:</strong>
        <% if @user.experience != nil %>
          <%= @user.experience.job %>
        <% end %>
      </p>

        <br>

      <p>
        <strong>Knowledge:</strong>
        <% if @user.experience != nil %>
          <%= @user.experience.knowledge %>
        <% end %>
      </p>

    </div>

    <%= link_to 'Edit', edit_user_path(@user) %>

    <div id="account_points">
      <p>Current points:
        <%= @user.points %>
      </p>
    </div>

    <div id="account_rating">
      <p> Current rating:
        <% if @user.rating == nil %>
          <%= "Participate in the community for a rating!" %>
        <% else %>
          <%= @user.rating %>
        <% end %>
      </p>
    </div>
