<div class="user_account_page">

  <h1> MY ACCOUNT</h1>

  <div class="account_page_container">

    <div class="user_info_points_rating">

      <div class="user_info">
        <div class="name_contact">
          <p>
            <strong>Name:</strong>
            <%= @user.name %>
          </p>
          <p>
            <strong>Last name:</strong>
            <%= @user.lastname %>
          </p>
          <p>
            <strong>Email:</strong>
            <%= @user.email %>
          </p>
        </div>

        <div class="user_experiences">
          <p>
            <strong>Education:</strong>
            <% if @user.experience != nil %>
              <%= @user.experience.education %>
            <% end %>
          </p>
          <p>
            <strong>Job Experience:</strong>
            <% if @user.experience != nil %>
              <%= @user.experience.job %>
            <% end %>
          </p>
          <p>
            <strong>Knowledge:</strong>
            <% if @user.experience != nil %>
              <%= @user.experience.knowledge %>
            <% end %>
          </p>

        <div class="edit_delete_user_btns">
          <button id="edit_user">
            <%= link_to 'Edit', edit_user_path(@user) %>
          </button>
          <button id="delete_account">
            <%= link_to 'Delete', user_url, remote: true %>
          </button>
          </div>
        </div>
      </div>

      <div class="user_account_points">
          <h3>Points</h3>
          <div id="points"><p><%= @user.points %></p></div>
      </div>

      <div class="user_account_rating">

          <h3>Rating</h3>
          <% if @user.ratings.average(:rating)== nil %>
            <h4> Participate in the community for a rating! </h4>
          <% else %>
            <%= @user.ratings.average(:rating) %>/5 (<%= @user.ratings.count %> ratings total)
          <div class="notification_rating">
            <div class="star-ratings-css">
              <div class="star-ratings-css-top" style="width: <%= @user.ratings.average(:rating)/5.0*100.0 %>%">
                <span>★</span><span>★</span><span>★</span><span>★</span><span>★</span>
              </div>
              <div class="star-ratings-css-bottom">
                <span>★</span><span>★</span><span>★</span><span>★</span><span>★</span>
              </div>
            </div>
          </div>
          <% end %>
      </div>
    </div>

    <div class="user_account_notifications">

      <%= render "activities/notifications" %>

              <button id="clear_notifications">
                <%= link_to "Clear", activity_url, remote: true %>
              </button>
              
    </div>
  </div>
</div>
