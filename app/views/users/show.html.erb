<div class="user_account_page">

  <h1> MY ACCOUNT</h1>

    <div class="account_page_container">

      <!-- <p id="notice"><%= notice %></p> -->
      <div class="user_info">
          <p>
            <strong>Name:</strong>
            <%= @user.name %>
          </p>
          <p>
            <strong>Last name:</strong>
            <%= @user.lastname %>
          </p>
          <p>
            <strong>Email:</strong>
            <%= @user.email %>
          </p>

    <%#= link_to 'Back', root_path %>

        <div class="user_experiences">

          <p>
            <strong>Education:</strong>
            <% if @user.experience != nil %>
              <%= @user.experience.education %>
            <% end %>
          </p>

            <br>

          <p>
            <strong>Job Experience:</strong>
            <% if @user.experience != nil %>
              <%= @user.experience.job %>
            <% end %>
          </p>

            <br>

          <p>
            <strong>Knowledge:</strong>
            <% if @user.experience != nil %>
              <%= @user.experience.knowledge %>
            <% end %>
          </p>

        </div>

        <button> <%= link_to 'Edit', edit_user_path(@user) %> </button>
        <button> <%= link_to 'Delete', @user, method: :delete, data: { confirm: "Are you sure you want to permanently delete your account?" } %> </button>

        </div>

          <div class="user_account_points">
            <p>
              <strong>Current points:</strong>
              <%= @user.points %>
            </p>
          </div>

          <div class="user_account_rating">
            <p>
              <strong>Current rating:</strong>
              <% if @user.ratings == nil %>
                <%= "Participate in the community for a rating!" %>
              <% else %>
                <%= @user.ratings.average(:rating) %> (<%= @user.ratings.count %> ratings total) <div class="notification_rating"> &#9733; </div>
              <% end %>
            </p>
          </div>

          <div class="user_account_notifications">

              <%= render "notifications" %>

          </div>
    </div>
  </div>
